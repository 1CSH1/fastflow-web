<!--pages/plan/weekly/create.wxml-->
<view class="page">
  <view class="field-set">
    <view class="field-item">
      <!-- <label class="field-label">周目标</label> -->
      <label class="field-control">
        <textarea
          value='{{ aim }}'
          bindinput='bindInputEvent'
          class="field-input w-full"
          placeholder="填写周目标">
        </textarea>
      </label>
    </view>
  </view>
  <view class="fixed-bottom">
    <view class="button-group">
      <button class="button" bindtap="handleCancelTap">取消</button>
      <button class="button button-primary" bindtap="handleSaveTap">保存</button>
    </view>
  </view>
</view>
